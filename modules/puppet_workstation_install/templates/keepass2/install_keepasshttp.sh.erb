#!/bin/bash

set -e

workdir=<%= @builddir %>
plugindir=/usr/lib/keepass2/Plugins
if [ ! -d "${workdir}" ]; then
    mkdir $workdir
fi
cd $workdir > /dev/null
curl -fsSL https://raw.github.com/pfn/keepasshttp/master/KeePassHttp.plgx > "$plugindir/KeePassHttp.plgx"
chmod 644 "$plugindir/KeePassHttp.plgx"
